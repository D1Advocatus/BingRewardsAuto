{
	"action": {
		"default_popup": "popup.html",
		"default_icon": {
			"16": "/ico/16.png",
			"32": "/ico/32.png",
			"64": "/ico/64.png",
			"128": "/ico/128.png",
			"256": "/ico/256.png",
			"512": "/ico/bing.png"
		}
	},
	"author": "D1Advocatus",
	"name": "BingRewardsAuto",
	"version": "0.0.0.1",
	"description": "With one click earn your daily Bing Rewards Points",
	"icons": {
		"16": "/ico/16.png",
		"32": "/ico/32.png",
		"64": "/ico/64.png",
		"128": "/ico/128.png",
		"256": "/ico/256.png",
		"512": "/ico/bing.png"
	},
	"background": {
		"service_worker": "/js/sw.js",
		"type": "module"
	},
	"content_scripts": [
		{
			"matches": ["*://*.bing.com/*"],
			"js": ["/js/content.js"],
			"run_at": "document_start"
		}
	],
	"host_permissions": ["<all_urls>"],
	"manifest_version": 3,
	"permissions": [
		"alarms",
		"browsingData",
		"debugger",
		"scripting",
		"storage",
		"tabs",
		"webNavigation",
		"webRequest"
	],
	"update_url": "https://clients2.google.com/service/update2/crx",
	"web_accessible_resources": [
		{
			"resources": [
				"/libs/extend-native-history-api.js",
				"/libs/requests.js"
			],
			"matches": ["https://*/*", "http://*/*"]
		}
	]
}